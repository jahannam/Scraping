@{
    ViewData["Title"] = "Keyword URL Search";
}

<h1>URL occurances on Google with given Keywords</h1>

<form method="post">
    <div>
        <label>Keywords:</label><br />
        <input type="text" name="Keywords" value="@Model.Keywords" class="form-control" />
    </div>
    <div>
        <label>URL:</label><br />
        <input type="text" name="Url" value="@Model.Url" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.HasSearched)
{
    <hr />
    <h3>Search Results</h3>
    <p><strong>Keywords:</strong> @Model.Keywords</p>
    <p><strong>URL:</strong> @Model.Url</p>

    <!-- Replace with actual result content -->
    <div class="alert alert-info">
        The url was found in following positions <strong>@Model.Result</strong>.
    </div>
}
